{
  "name": "rafamel-github-io",
  "version": "1.0.0",
  "description": "Building stuff somewhere around",
  "author": "Rafa Mel",
  "private": true,
  "scripts": {
    "precommit": "MSG='Committing in:' npm run validate",
    "build": "npm run validate && parcel build src/index.html --public-url ./build -d ./build && mv ./build/index.html ./",
    "dev": "(rm -r .cache dist || exit 0) && (parcel watch src/index.html --public-url ./ & live-server ./dist --port=5000 --no-browser & nodemon -w ./src -e js,scss,html -x \"clear && npm run lint\")",
    "fix": "prettier --write \"**/*.{js,scss,md}\"",
    "lint": "eslint ./src --ext .js",
    "lint:md": "markdownlint *.md --config markdown.json",
    "validate": "run-s fix lint lint:* && npm run outdated",
    "update": "npm update --save/save-dev && npm outdated",
    "outdated": "if !(npm outdated) && [ -n \"$MSG\" ]; then printf \"\n\" && for ((i=10; i>=0; --i)); do sleep 1 && printf '\r%s %2d' \"$MSG\" \"$i\"; done; fi;"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "devicon": "github:konpa/devicon#d587aed247072603ebe94f8e59587c04881d120e",
    "devicons": "^1.8.0",
    "emoji.css": "^1.0.3",
    "google-fonts": "^1.0.0",
    "node-sass": "^4.7.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.17.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-class-property": "^1.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.12.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.6.1",
    "eslint-plugin-react-app": "^3.0.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "live-server": "^1.2.0",
    "markdownlint-cli": "^0.7.1",
    "npm-run-all": "^4.1.1",
    "parcel-bundler": "^1.5.1",
    "prettier": "1.10.2"
  }
}
